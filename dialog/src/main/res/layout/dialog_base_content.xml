<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog"
    android:minWidth="@dimen/size_540"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_36"
        android:visibility="gone"
        tools:text="标题" />

    <FrameLayout
        android:id="@+id/fl_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/ll_dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_dialog_left_btn"
            style="@style/DialogButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:text="确定" />

        <View
            android:id="@+id/view_bottom_divide"
            android:layout_width="@dimen/size_1"
            android:layout_height="match_parent"
            android:background="@color/divide_line" />

        <TextView
            android:id="@+id/tv_dialog_right_btn"
            style="@style/DialogButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:text="取消" />
    </LinearLayout>

</LinearLayout>